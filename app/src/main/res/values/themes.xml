<resources>
    <!-- Base application theme. -->
    <style name="Theme.Noted" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/colorSecondaryVariant</item>
        <item name="colorPrimaryVariant">#fff</item>
        <item name="colorOnPrimary">#000</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uiSecondary</item>
        <!-- <item name="colorSecondaryVariant">#2D2C31</item> -->
        <!-- <item name="colorOnSecondary">#000</item> -->

        <!-- Text -->
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>

        <!-- System -->
        <item name="android:statusBarColor">#1B1A1D</item>
        <item name="android:navigationBarColor">#1B1A1D</item>
        <item name="android:textColorHighlight">@color/textHandleColor</item>
        <item name="android:colorControlActivated">@color/textHandleColor</item>
        <item name="popupMenuBackground">@drawable/menu_background</item>
    </style>
</resources>